generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int      @id @default(autoincrement())
  nombre      String
  correo      String   @unique
  clave       String
  descripcion String?
  correos     Correo[]
}

model Correo {
  id           Int     @id @default(autoincrement())
  remitente    String
  destinatario String
  asunto       String
  mensaje      String
  usuarioId    Int
  usuario      Usuario @relation(fields: [usuarioId], references: [id])
}
